#include<bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0)
using namespace std;

/* bai 16: xếp lịch diễn 
    quan trọng tg kết thúc-> sort theo tg end
    -----------

*/
bool cmp(pair<int,int>x, pair<int,int>y) {
 return x.second<y.second;
 }
int main() {
 int n;cin>>n;
 pair<int,int>a[n];
 for(int i=0;i<n;++i) cin>>a[i].first>>a[i].second;
 sort(a,a+n,cmp);
int ans =1,kt=a[0].second;
 for(int i=0;i<n;++i) {
    if(a[i].first>kt) {
        ans++;
        kt =a[i].second;
    }
 }
 cout<<ans<<endl;

 }
 // scheduling problem
